---
title: Видео
layout: layouts/page.njk
type: inner
pagination:
 data: collections.videos
 size: 6
 alias: videos
 reverse: true
permalink: "/videos/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}"
---

<main class="main">
    <section class="section section--article">
        <div class="content">
            <a class="back-link" href="/">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" width="20" height="8" viewBox="0 0 20 8"><path d="M.2 3.73a.45.45 0 00-.15.33.42.42 0 00.15.33l3.45 3.27c.1.08.22.13.35.13.13 0 .26-.05.35-.13.1-.1.14-.21.14-.34A.46.46 0 004.35 7L1.7 4.6h17.8c.13 0 .26-.06.35-.15.1-.09.15-.2.15-.33a.46.46 0 00-.15-.34.52.52 0 00-.35-.13H1.7l2.65-2.51c.1-.09.14-.2.14-.33a.46.46 0 00-.14-.33A.51.51 0 004 .33a.51.51 0 00-.35.14L.2 3.73z"/></svg>
                <span>Вернуться на <b>plesk.tech</b></span>
            </a>

            <div class="videos flow">
                <h1 class="section__title title">{{ title }}</h1>
                <ul class="videos__list">
                    {%- for video in videos -%}
                        <li class="videos__item">
                            <div class="video">
                                <a class="video__link" href="https://youtu.be/{{ video.data.id }}">
                                    <picture>
                                        <source srcset="https://i.ytimg.com/vi_webp/{{ video.data.id }}/{% if video.data.thumb %}{{ video.data.thumb }}{% else %}maxresdefault{% endif %}.webp" type="image/webp">
                                        <img class="video__media" src="https://i.ytimg.com/vi/{{ video.data.id }}/{{ video.data.id }}/{% if video.data.thumb %}{{ video.data.thumb }}{% else %}maxresdefault{% endif %}.jpg" alt="{{ video.data.title }}">
                                    </picture>
                                </a>
                                <button class="video__button" aria-label="Запустить видео">
                                    <svg width="68" height="48" viewBox="0 0 68 48"><path class="video__button-shape" d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z"></path><path class="video__button-icon" d="M 45,24 27,14 27,34"></path></svg>
                                </button>
                            </div>
                            <div class="videos__video-date">{{ video.data.date.toLocaleDateString('ru-RU') }}</div>
                            <a class="videos__video-title" href="{{ video.url }}">{{ video.data.title }}</a>
                        </li>
                    {%- endfor -%}
                </ul>

                {% include 'partials/paging.njk' %}
            </div>
        </div>
    </section>
</main>
